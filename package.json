{
  "name": "teller-protocol",
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "node:localhost": "yarn hardhat node",
    "deploy:localhost": "yarn hardhat deploy --network localhost",
    "deploy:rinkeby": "yarn hardhat deploy --network rinkeby",
    "deploy:ropsten": "yarn hardhat deploy --network ropsten",
    "deploy:kovan": "yarn hardhat deploy --network kovan",
    "deploy:mainnet": "yarn hardhat deploy  --network mainnet",
    "test": "yarn hardhat test",
    "contract:compile": "COMPILING=true yarn hardhat compile",
    "contract:size": "yarn contract:compile && yarn hardhat size-contracts",
    "coverage": "yarn hardhat coverage --solcoverjs ./solcover.js",
    "test:localhost": "yarn hardhat test --network localhost",
    "console:rinkeby": "yarn hardhat console --network rinkeby",
    "console:ropsten": "yarn hardhat console --network ropsten",
    "console:kovan": "yarn hardhat console --network kovan",
    "console:localhost": "yarn hardhat console --network localhost",
    "console:mainnet": "yarn hardhat console --network mainnet",
    "compile": "yarn contract:compile && yarn types && yarn tsc",
    "types": "yarn typechain --target ethers-v5 --outDir types/typechain 'artifacts/!(build-info)/**/+([a-zA-Z0-9]).json'"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.1.6",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.0.0",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/expect": "^24.3.0",
    "@types/json2csv": "^5.0.1",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "disklet": "^0.4.6",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.2.1",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.0.9",
    "ethers": "^5.0.26",
    "hardhat": "^2.0.11",
    "hardhat-contract-sizer": "^2.0.2",
    "hardhat-deploy": "^0.7.0-beta.57",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.2.3",
    "json2csv": "^5.0.6",
    "jsonfile": "^6.0.1",
    "lint-staged": "^10.5.3",
    "mocha": "^7.1.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.46",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.14",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{sol,js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
