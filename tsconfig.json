{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./types", "./typechain"]
  },
  "include": [
    "./test",
    "./scripts",
    "./migrations",
    "./test-integration",
    "./types",
    "./node_modules/@types"
  ],
  "exclude": ["./node_modules/**/*", "./contracts", "./build", "./docs"]
}
