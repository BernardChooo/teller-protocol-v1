{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES6",
    "allowJs": true,
    "strict": true,
    "typeRoots": ["./types", "./typechain"]
  },
  "files": ["hardhat.config.ts"],
  "include": [
    "./test",
    "./scripts",
    "./deploy",
    "./migrations",
    "./test-integration",
    "./test-hardhat"
  ],
  "exclude": ["./contracts", "./build", "./artifacts", "./docs"]
}
